<p id="notice"><%= notice %></p>

<h1>Cart</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Amount</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody class="line-items">
		<% @line_items.each do |line_item| %>
			<tr id="<%= line_item.id %>" class="line-item">
				<%= render 'line_item', line_item: line_item %>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="total">
	<span>
		Total:
	</span>
	<span class="price">
		<%= render 'total_price' %>
	</span>
</div>

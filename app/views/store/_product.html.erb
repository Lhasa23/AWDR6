<li id="product_<%= product.id %>" class="<%= latest ? 'latest' : '' %>">
  <%= link_to image_tag(product.image_url), line_items_path(line_item: { product_id: product }), remote: true, method: :post %>
  <h2><%= product.title %></h2>
  <p><%= sanitize(product.description) %></p>
  <div class="price">
    <%= number_to_currency(product.price, locale: 'zh-CN') %>
    <%= button_to 'Add to Cart', line_items_path(line_item: { product_id: product }), remote: true %>
  </div>
</li>
<li id="<%= product.id %>">
  <%= link_to line_items_path(line_item: { product_id: product }), method: :post, remote: true do %>
    <%= image_tag(product.image_url) %>
  <% end %>
  <h2><%= product.title %></h2>
  <p><%= sanitize(product.description) %></p>
  <div class="price">
    <%= number_to_currency(product.price, locale: 'zh-CN') %>
    <%= button_to 'Add to Cart', line_items_path(line_item: { product_id: product }), remote: true %>
  </div>
</li>
